{
  "name": "alerts-server",
  "version": "1.0.0",
  "private": "true",
  "description": "",
  "main": "main.ts",
  "scripts": {
    "start": "npm run clean && npm run build && node dist/server.js",
    "clean": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/server.ts",
    "debug": "npm run clean && npm run build && node --inspect dist/server.js",
    "init:all": "npm run clean:modules & npm run init:modules && npm run init:hooks",
    "init:modules": "unzip -oq node_modules.zip",
    "init:hooks": "ncp ./hooks/ ./.git/hooks",
    "prettier:all": "prettier --write \"src/**/*.ts\"",
    "eslint:all": "eslint . --fix --ext .ts",
    "test": "mocha -r ts-node/register 'src/tests/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.2.22",
    "@types/debug": "4.1.7",
    "@types/express": "4.17.13",
    "@types/mocha": "8.2.3",
    "@types/node": "14.17.32",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "chai": "4.3.4",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "husky": "6.0.0",
    "lint-staged": "11.2.6",
    "mocha": "8.4.0",
    "ncp": "2.0.0",
    "nodemon": "2.0.14",
    "prettier": "2.4.1",
    "sinon": "10.0.0",
    "ts-loader": "9.2.6",
    "ts-node": "9.1.1",
    "typescript": "4.4.4",
    "webpack": "5.62.1",
    "webpack-cli": "4.9.1"
  },
  "dependencies": {
    "apollo-link": "1.2.14",
    "apollo-link-error": "1.1.13",
    "apollo-link-http": "1.5.17",
    "apollo-server-express": "2.25.3",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql": "15.7.2",
    "graphql-tools": "7.0.5",
    "node-fetch": "2.6.6",
    "path": "0.12.7",
    "rimraf": "3.0.2",
    "rxjs": "7.4.0",
    "winston": "3.3.3",
    "winston3-logstash-transport": "1.2.3"
  },
  "keywords": [],
  "author": "Noy Cohen",
  "license": "ISC"
}
