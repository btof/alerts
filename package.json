{
  "name": "alerts-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "npm run clean && npm run build && node dist/main.js",
    "clean": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/main.ts",
    "prettier": "prettier --write",
    "prettier:all": "prettier --write \"src/**/*.ts\"",
    "eslint": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run prettier",
      "npm run eslint",
      "git add"
    ]
  },
  "keywords": [],
  "author": "Noy Cohen",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "4.17.8",
    "@types/node": "14.14.5",
    "@types/ws": "7.2.9",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.15.0",
    "graphql-playground-react": "1.7.27",
    "husky": "4.3.0",
    "lint-staged": "10.5.0",
    "nodemon": "2.0.6",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "apollo-cache-inmemory": "1.6.6",
    "apollo-client": "2.6.10",
    "apollo-link-http": "1.5.17",
    "apollo-server": "2.18.2",
    "apollo-server-express": "2.9.16",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql": "15.4.0",
    "graphql-tag": "2.11.0",
    "graphql-tools": "6.2.6",
    "merge-graphql-schemas": "1.7.8",
    "node-fetch": "2.6.1",
    "path": "0.12.7",
    "rimraf": "3.0.2",
    "ws": "7.3.1"
  }
}
