{
  "name": "alerts-server",
  "version": "1.0.0",
  "private": "true",
  "description": "",
  "main": "main.ts",
  "scripts": {
    "start": "npm run clean && npm run build && node dist/server.js",
    "clean": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/server.ts",
    "debug": "npm run clean && npm run build && node --inspect dist/server.js",
    "init:all": "npm run clean:modules & npm run init:modules && npm run init:hooks",
    "init:modules": "unzip -oq node_modules.zip",
    "init:hooks": "ncp ./hooks/ ./.git/hooks",
    "prettier:all": "prettier --write \"src/**/*.ts\"",
    "eslint:all": "eslint . --fix --ext .ts",
    "test": "mocha -r ts-node/register 'src/tests/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.25",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^6.0.0",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "sinon": "^13.0.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.9",
    "@graphql-tools/schema": "^8.3.9",
    "@graphql-tools/utils": "^8.6.8",
    "@types/lodash": "^4.14.182",
    "@types/ws": "^8.5.3",
    "apollo-link-error": "^1.1.13",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.5",
    "express": "^4.17.1",
    "graphql": "^16.3.0",
    "graphql-subscriptions": "2.0.0",
    "graphql-ws": "^5.7.0",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "winston": "^3.3.3",
    "winston3-logstash-transport": "^1.2.3",
    "ws": "^8.5.0"
  },
  "keywords": [],
  "author": "Noy Cohen",
  "license": "ISC"
}
