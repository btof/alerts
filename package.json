{
  "name": "alerts-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "npm run clean && npm run build && node dist/main.js",
    "clean": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/main.ts",
    "prettier": "prettier --write",
    "prettier:all": "prettier --write \"src/**/*.ts\"",
    "eslint": "eslint",
    "test": "mocha -r ts-node/register 'src/tests/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run prettier",
      "npm run eslint",
      "git add"
    ]
  },
  "keywords": [],
  "author": "Noy Cohen",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "4.2.14",
    "@types/express": "^4.17.1",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.11",
    "@types/ws": "7.4.0",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "apollo": "2.31.2",
    "chai": "4.2.0",
    "eslint": "7.15.0",
    "eslint-config-prettier": "6.15.0",
    "husky": "4.3.5",
    "lint-staged": "10.5.3",
    "mocha": "8.2.1",
    "ncp": "2.0.0",
    "nodemon": "2.0.6",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "apollo-link": "^1.2.14",
    "apollo-link-http": "1.5.17",
    "apollo-server": "^2.18.2",
    "apollo-server-express": "^2.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql": "15.4.0",
    "graphql-tag": "2.11.0",
    "graphql-tools": "6.2.6",
    "merge-graphql-schemas": "1.7.8",
    "node-fetch": "2.6.1",
    "path": "0.12.7",
    "rimraf": "3.0.2",
    "rxjs": "^6.6.3",
    "ws": "7.4.1"
  }
}
