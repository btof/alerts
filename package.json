{
  "name": "alerts-server",
  "version": "1.0.0",
  "description": "",
  "main": "main.ts",
  "scripts": {
    "start": "npm run clean && npm run build && node dist/server.js",
    "clean": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/server.ts",
    "debug": "npm run clean && npm run build && node --inspect dist/server.js",
    "init:all": "npm run clean:modules & npm run init:modules && npm run init:hooks",
    "init:modules": "unzip -oq node_modules.zip",
    "init:hooks": "ncp ./hooks/ ./.git/hooks",
    "prettier:all": "prettier --write \"src/**/*.ts\"",
    "eslint:all": "eslint . --fix --ext .ts",
    "test": "mocha -r ts-node/register 'src/tests/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.2.14",
    "@types/debug": "4.1.5",
    "@types/express": "4.17.11",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.22",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "chai": "4.2.0",
    "eslint": "7.19.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "mocha": "8.2.1",
    "ncp": "2.0.0",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "apollo-link": "1.2.14",
    "apollo-link-error": "1.1.13",
    "apollo-link-http": "1.5.17",
    "apollo-server-express": "2.19.2",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql": "15.5.0",
    "graphql-tools": "7.0.2",
    "node-fetch": "2.6.1",
    "path": "0.12.7",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "winston": "3.3.3",
    "winston-logstash-ts-fix": "0.0.2"
  },
  "keywords": [],
  "author": "Noy Cohen",
  "license": "ISC"
}
